<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.DemoMapper" >
	<resultMap id="AuthorMap" type="com.example.demo.model.Author" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="age" property="age" jdbcType="INTEGER" />
    <result column="sex" property="sex" jdbcType="VARCHAR" />
  </resultMap>
  
  <select id="getAuthorById" resultMap="AuthorMap" parameterType="java.lang.Integer">
  		select * from author a where a.id=#{id}
  </select>
  <insert id="addAuthor"  parameterType="com.example.demo.model.Author">
  		insert into author 
  		<trim prefix="(" suffix=")" suffixOverrides="," >
	      <if test="name != null" >
	        name,
	      </if>
	      <if test="age != null" >
	        age,
	      </if>
	      <if test="sex != null" >
	        sex,
	      </if>
	    </trim>
	    <trim prefix="values (" suffix=")" suffixOverrides="," >
	      <if test="name != null" >
	        #{name},
	      </if>
	      <if test="age != null" >
	        #{age},
	      </if>
	      <if test="sex != null" >
	        #{sex},
	      </if>
	    </trim>
  </insert>
  <update id="updateAuthor" parameterType="com.example.demo.model.Author">
  		update author 
  		<set>
  			<if test="name != null" >
	        name=#{name},
	      </if>
	      <if test="age != null" >
	        age=#{age},
	      </if>
	      <if test="sex != null" >
	        sex=#{sex},
	      </if>
  		</set>
  		where id=#{id}
  </update>
  <delete id="deleteAuthorById" parameterType="java.lang.Integer">
  	delete from author where id=#{id}
  </delete>
</mapper>

